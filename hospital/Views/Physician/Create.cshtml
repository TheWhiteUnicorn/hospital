@model DataAccess.Models.Physician

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="content-area">
    <form action="/Physician/Create" method="post">
        <p>
            @Html.LabelFor(model => model.Name, "Введите имя пациента: ")<br />
            @Html.EditorFor(model => model.Name)
        </p>
        <p>
            @Html.LabelFor(model => model.City, "Введите Город: ")<br />
            @Html.EditorFor(model => model.City)
        </p>
        <input type="submit" value="Submit" />
    </form>   
</div>